
set nocompatible
set backspace=indent,eol,start
set modelines=0
set hidden

set nohlsearch
set incsearch
set laststatus=2

set autoindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab

set ruler
set nonumber
set wrap
set showmode
set scrolloff=8

set viminfo=""
set noswapfile
set nobackup
set nowb

set encoding=utf-8
set t_Co=256
syntax on
colorscheme molokai

"// basic skeleton for new html files
augroup html
   au BufNewFile *.html 0r ~/.vim/skel/html.skel
augroup end

"// ..and for new css files
augroup css 
  au bufNewFile *.css 0r ~/.vim/skel/css.skel
augroup end

"// make vim recognize .md as markdown
au BufRead,BufNewFile *.md set filetype=markdown

